{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./build", // Usar um caminho relativo como './build' é mais robusto
    // "rootDir": "src", // REMOVA OU COMENTE ESTA LINHA
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules"] // É uma boa prática excluir explicitamente node_modules
}
